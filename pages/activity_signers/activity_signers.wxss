/* pages/activity_signers/activity_signers.wxss */
@import "../template/common.wxss";

.info_back{
  margin-top: 110.5px;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items: center;
}

.info{
  width: 334.05px;
  height: 85.0px;
  border-radius:14.4px;
  background-color: #FFFFFF;
  float: left;
  margin-bottom: 7px;
}
.head_image{
  width:54.4px;
  height:54.4px;
  margin-top: 13.6px;
  margin-left: 17.0px;
  border-radius:16.0px;
  float: left;
}
.user_name{
  width:76.5px;
  height:21.25px;
  margin-top: 19.55px;
  margin-left: 12.75px;
  float: left;
} 

.user_name text{
  font-size:15px;
  font-family:PingFangSC-Medium,PingFang SC;
  color:rgb(35, 38, 68);
  line-height:21.25px;
  /* float: left; */
}

.tag_content{
  height: 18px;
  display:flex;
  flex-direction:row;
  justify-content:space-around;
  float: left;
}

.tag{
  width:35px;
  height:18px;
  border-radius:8.8px;
  border:1px solid rgba(89,90,107,0.57);
  margin-top: 7.6px;
  margin-right: 4px;
}

.tag text{
  float: left;
  margin-left: 8px;
  margin-top: 0.85px;
  font-size:11px;
  font-family:PingFangSC-Light,PingFang SC;
  color:rgba(45,47,68,0.79);
  line-height:15.299999999999999px;
}

.follow_or_not{
  width:71px;
  height:33.15px;
  background:rgba(100, 154, 255, 1);
  margin-top: 26px;
  margin-left: 247.35px;
  border-radius:10.4px;
}

.follow_or_not text{
  width: 71px;
  height:17.0px;
  font-size:11.9px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:17.0px;
  margin-top: 7.7px;
  text-align: center;
  float: left;
}


