/* pages/regist/regist.wxss */
@import "../template/common.wxss";

.info_head{
  height:125px;
  border:1px rgba(255, 255, 255, 0.001) solid;
}

.detail{
  /* float: left; */
  height:100%;
  border-radius: 28px 28px 0px 0px;
  background:#FFFFFF;
}

.register-cells {
  margin-top: 22px;
  padding-top: 0px;
}

.register-cell {
  color: #3E81FF;
}

.weui-label {
  font-size: 15px;
}

.register-placehoder{
  color: #3E81FF;
}

.register-input {
  text-align: right;
}

.register-checkbox {
  float: right;
}

.register-btn {
  position: fixed;
  border-radius: 28px 28px 0px 0px;
  background: #FFF;
  color: #333;
  width: 100%;
  bottom: 0%;
  height:55px;
  box-shadow: 10px 10px 35px #649AFF;
  padding-top:15px;
  text-align: center;
  font-size: 23px;
}

.head{
  height: 10%;
  text-align: center;
  font-size: 20px;
  border-bottom:0.1px white solid;
}

.head_text{
  margin-top: 20%;
}


.body{
  width: 100%;
  height: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: 100px;
}

.body_item{
  width: 100%;
  height: 80px;
  margin-left: 5%;
}

.body_item text{
  font-size: 20px;
  margin-left: 10%;
}

.body_item button{
  margin-top: 8%;
}

.body_item_input{
  height: 30%;
  margin-top: 5%;
  margin-left: 5%;
  display: inline-block;
  border:1px gray solid;
}

.body_item_radio{
  width:50%;
  margin-left: 5%;
  display: inline-block;
}

.body_item_radio radio-group label {
  margin-right: 10%;
}

.tail{
  text-align: center;
  line-height: 80px;
}