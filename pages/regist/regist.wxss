/* pages/regist/regist.wxss */
@import "../template/common.wxss";

.head{
  height: 10%;
  text-align: center;
  font-size: 20px;
  border-bottom:0.1px white solid;
}

.head_text{
  margin-top: 20%;
}


.body{
  width: 100%;
  height: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: 100px;
}

.body_item{
  width: 100%;
  height: 80px;
  margin-left: 5%;
}

.body_item text{
  font-size: 20px;
  margin-left: 10%;
}

.body_item button{
  margin-top: 8%;
}

.body_item_input{
  height: 30%;
  margin-top: 5%;
  margin-left: 5%;
  display: inline-block;
  border:1px gray solid;
}

.body_item_radio{
  width:50%;
  margin-left: 5%;
  display: inline-block;
}

.body_item_radio radio-group label {
  margin-right: 10%;
}

.tail{
  text-align: center;
  line-height: 80px;
}