/* pages/regist/regist.wxss */
@import "../template/common.wxss";

.detail{
  margin-top: 32%;
}


.body{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  float: left;
  margin-top: 5%;
}

.body_item{
  width: 80%;
  height: 45px;
  margin-left: 10%;
  margin-bottom: 8%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  float: left;
  border-bottom: 1px rgba(100, 154, 255, 0.21) solid;
  line-height:3%;

}

.body_item .text_a{
  width: 25%;
  font-size:16px;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(62,129,255,1);
}


.body_item_input{
  float: right;
  text-align: right;
}

.body_item_input_placeholder{
  font-size: 15px;
}

.body_item_input_text{
  font-size: 20px;
  font-weight: 600;
  color: rgba(62, 129, 255, 1);
}

.body_item_radio{
  width:50%;
  margin-left: 5%;
  display: inline-block;
}

.body_item_radio radio{
  background-color: white;
  border:0px;
}

.body_item_radio radio-group label {
  margin-right: 10%;
}
