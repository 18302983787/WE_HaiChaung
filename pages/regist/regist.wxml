<!--pages/regist/regist.wxml-->

<view class="content">
  <view class="nav_back" bindtap="go_back"></view>
  <view class="nav_back_title">我的活动</view>
  <view class="detail">
  <form class="body" bindsubmit="formSubmit">
    <view class="body_item">
      <view class="text_a">姓名</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="username" placeholder="请输入真实姓名">
      </input>
      </view>
    </view>
    <view class="body_item">
      <view class="text_a">性别</view>
      <view class="body_item_radio">
        <radio-group name="gender">
          <label><radio value="男">男</radio></label>
          <label><radio value="女">女</radio></label>
        </radio-group>
      </view>
    </view>
    <view class="body_item">
      <view class="text_a">年龄</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="age" placeholder="18">
      </input>
      </view>
    </view>
    <view class="body_item">
      <view class="text_a">电话</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="phone" placeholder="请输入11位有效电话">
      </input>
      </view>
    </view> 
    <view class="body_item">
      <view class="text_a">生日</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="birth" placeholder="1990-01-01">
      </input>
      </view>
    </view> 
    <view class="body_item">
      <view class="text_a">毕业院校</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="graduate" placeholder="最高学历">
      </input>
      </view>
    </view> 
    <view class="body_item">
      <view class="text_a">现居地</view>
      <view class="body_item_input">
      <input class="body_item_input_text" placeholder-class="body_item_input_placeholder" name="loc" placeholder="居住地址">
      </input>
      </view>
    </view>
    <view class="body_item">
      <button type="primary" form-type="submit">注册</button>
    </view>
  </form>
  </view>
</view>
