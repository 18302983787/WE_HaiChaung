.id_back{
  height: 390px;
  margin-top: 130px;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  align-items: center;
}

.id_a{
  width:300px;
  height: 180px;
  border-radius:14.4px;
  border:1px rgba(100, 154, 255, 1) solid;
  background: rgba(146, 184, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.id_b{
  width:300px;
  height: 180px;
  border-radius:14.4px;
  border:1px rgba(100, 154, 255, 1) solid;
  background: rgba(146, 184, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.id_txt{
  margin-top: 15px;
  width: 96px;
  height: 22px;
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 22px;
}

.id_pic{
  height: 35px;
  width: 40px;
}

.content_bottom{
  width: 100%;
  position: fixed;
  height: 9%;
  bottom: 2px;
  display: flex;
  flex-direction:row;
  justify-content:space-around
}

.bottom_button{
  width: 100%;
  background:rgba(255,255,255,1);
  border:1px rgba(100, 154, 255, 1) solid;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:0px -11px 63px 0px rgba(0,41,255,0.11);
  border-radius:29px 29px 0px 0px;
}

.bottom_button text{
  font-size:18.7px;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(45,47,68,1);
  line-height:25.5px;
}